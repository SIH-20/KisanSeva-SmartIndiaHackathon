<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="./home.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./shop.html">Shop</a>
                    <span>Shopping Cart</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th class="p-name">Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                
                            </tr>
                        </thead>
                        <tbody>




                            <% cartItems.forEach(function(item){%>
                                <tr>
                                    <td class="cart-pic"><img src="<%=item.item.image%>" style="max-width: 100px;max-height: 100px ;padding: 5px;"></td>
                                    <td class="cart-title">
                                        <h5>
                                            <%=item.item.title%>
                                        </h5>
                                    </td>
                                    <td class="p-price">
                                        <%=item.item.price%>
                                    </td>
                                    <td class="qua-col">
                                        <div class="quantity">
                                           
                                             <b><%= item.quantity %></b>
                                            
                                        </div>
                                    </td>
                                    <td class="total-price">
                                        <%=(item.item.price*item.quantity)%>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="cart-buttons">
                           
                            <a href="/ecommerce" class="primary-btn up-cart">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-4 offset-lg-4">
                        <div class="proceed-checkout">
                            <ul>
                                <li class="subtotal">Subtotal <span>Rs. <%= amount %></span></li>
                                <li class="subtotal">Delivery Cost <span>Rs. <%= deliveryAmount %></span></li>
                                <li class="cart-total">Total <span>Rs. <%= total %></span></li>
                            </ul>
                            <a href="/order/proceedForPayment" class="proceed-btn">PROCEED TO PAY</a><br>
                            <% if(!locals.user.verified){%>
                                <a href="/users/reverify" class="proceed-btn">Resend Verification Mail</a>
                                <%}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->